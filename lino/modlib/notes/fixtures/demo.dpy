import decimal
from django.utils.translation import ugettext as _
from lino.utils.instantiator import Instantiator, i2d
from lino.modlib.tools import resolve_model

from django.contrib.auth import models as auth

def objects():
  
    u = auth.User.objects.get(pk=1)
    
    notetype = Instantiator('notes.NoteType').build
    yield notetype(name="phone report",print_method='appy',template='notes.NoteType.Telefonnotiz.odt')
    yield notetype(name="todo")
    
    
    Person = resolve_model('contacts.Person')
    Company = resolve_model('contacts.Company')
    
    #~ print Person.objects.all()
    
    luc = Person.objects.get(name__exact='Saffre Luc')
    rko = Company.objects.get(name__exact=u'Rumma & Ko OÃœ')
    
    note = Instantiator('notes.Note').build
    n = note(user=u,date=i2d(20091208),subject="note for company 1",body="""Lorem ipsum...""",company=rko)
    yield n    
    
    n = note(user=u,date=i2d(20091208),subject="note for person 2",body="""Lorem ipsum...""",person=luc)
    yield n 
    
    yield note(user=u,date=i2d(20100517),subject="Django website",person=luc,url="http://www.djangoproject.com")
    yield note(user=u,date=i2d(20100517),subject="ExtJS website",person=luc,url="http://www.extjs.com")
    yield note(user=u,date=i2d(20100517),subject="Python website",person=luc,url="http://www.python.org")
